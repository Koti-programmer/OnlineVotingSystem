@{
    ViewBag.Title = "Home Page";
}

<div class="container mt-5 text-center">
    <h2 class="mb-3">Welcome to the Online Voting System</h2>
    <p class="lead mb-4">
        This web-based platform is designed to streamline the voting process using modern, secure, and user-friendly technology.
        It allows registered users to cast their votes electronically, ensuring accuracy, accessibility, and transparency.
    </p>

    <div class="row justify-content-center mb-4">
        <div class="col-md-8">
            <ul class="list-group list-group-flush">
                <li class="list-group-item">✔️ Secure User Registration and Login</li>
                <li class="list-group-item">✔️ Role-based Access for Admin and Voters</li>
                <li class="list-group-item">✔️ Real-time Voting and Result Tracking</li>
                <li class="list-group-item">✔️ Admin Panel to Manage Candidates & Elections</li>
            </ul>
        </div>
    </div>

    <a class="btn btn-primary btn-lg" href="@Url.Action("Register", "Account")">Get Started</a>
</div>
