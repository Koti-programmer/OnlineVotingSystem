@model List<OnlineVotingSystem.Models.Candidate>
@{
    ViewBag.Title = "Cast Your Vote";
}

<h2>Cast Your Vote</h2>

@if (ViewBag.Message != null)
{
    <p style="color: green">@ViewBag.Message</p>
}

@using (Html.BeginForm("Vote", "Vote", FormMethod.Post))
{
    <table class="table">
        <tr>
            <th>Select</th>
            <th>Candidate Name</th>
            <th>Party</th>
        </tr>
        @foreach (var candidate in Model)
        {
            <tr>
                <td>
                    <input type="radio" name="candidateId" value="@candidate.CandidateId" required />
                </td>
                <td>@candidate.Name</td>
                <td>@candidate.Party</td>
            </tr>
        }
    </table>
    <button type="submit" class="btn btn-success">Submit Vote</button>
}
